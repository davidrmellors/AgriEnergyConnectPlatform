<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Dashboard</title>
    @Styles.Render("~/Content/css")
    <link rel="stylesheet" href="~/Content/Site.css" />
    @Scripts.Render("~/bundles/modernizr")
</head>
<body class="background-image">
    <nav class="navbar navbar-expand-md bg-transparent w-100">
        <div class="container-fluid">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item">
                    @Html.ActionLink("Dashboard", "Index", "Admin", null, new { @class = "nav-link" })
                </li>
            </ul>
            <ul class="navbar-nav ml-auto">
                <li class="nav-item">
                    @Html.ActionLink("My Profile", "MyProfile", "Account", null, new { @class = "nav-link" })
                </li>
                <li class="nav-item">
                    @Html.ActionLink("Log Out", "Logout", "Account", null, new { @class = "nav-link" })
                </li>
            </ul>
        </div>
    </nav>
    <div class="flex-grow-1">
        @RenderBody()
    </div>
    <footer class="footer-background">
        <p>&copy; @DateTime.Now.Year - Agri-Energy Connect Platform</p>
    </footer>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
    @RenderSection("scripts", required: false)
</body>
</html>
