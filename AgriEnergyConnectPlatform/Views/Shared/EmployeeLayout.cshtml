<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Dashboard</title>
    @Styles.Render("~/Content/css")
    <link rel="stylesheet" href="~/Content/Site.css" />
    @Scripts.Render("~/bundles/modernizr")
</head>
<body class="">
    <nav class="navbar navbar-expand-md navbar-toggleable-md bg-transparent">
        <div class="container m-2 w-100">
            <ul class="navbar-nav flex-grow-1">
                <li class="nav-item">
                    @Html.ActionLink("Farming Hub", "FarmingHub", "FarmingHub", null, new { @class = "nav-link" })
                </li>
                <li class="nav-item">
                    @Html.ActionLink("Marketplace", "Marketplace", "Marketplace", null, new { @class = "nav-link" })
                </li>
                <li class="nav-item">
                    @Html.ActionLink("Projects", "Projects", "Projects", null, new { @class = "nav-link" })
                </li>
                <li class="nav-item">
                    @Html.ActionLink("Training", "Training", "Training", null, new { @class = "nav-link" })
                </li>
            </ul>
            
        </div>
        <div w-100>
            <ul class="navbar-nav ml-auto">
                <li class="nav-item">@Html.ActionLink("Log Out", "Logout", "Account", null, new { @class = "nav-link" })</li>
            </ul>
        </div>
    </nav>
    <div class="h-100">
        @RenderBody()
        <hr />
    </div>
    <footer>
        <p>&copy; @DateTime.Now.Year - Agri-Energy Connect Platform</p>
    </footer>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
